<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/loginbackground"
    android:id="@+id/login"
    android:clickable="false"
    android:focusable="true">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/runnerName"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_x="51dp"
        android:layout_y="227dp"
        android:textColor="#ffffffff"
        android:background="#60000000"
        android:autoText="false"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:layout_gravity="center_horizontal"
        android:layout_x="51dp"
        android:layout_y="277dp"
        android:textColor="#ffffffff"
        android:background="#60000000"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="220dp"
        android:layout_height="56dp"
        android:text="@string/login"
        android:id="@+id/loginButton"
        android:layout_x="51dp"
        android:layout_y="323dp"
        android:background="@drawable/button_login"
        android:textColor="#ffffffff"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="false"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/password"
        android:clickable="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/footer"
        android:id="@+id/footer"
        android:layout_x="0dp"
        android:layout_y="460dp"
        android:clickable="false"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:autoLink="web"
        android:phoneNumber="false"
        android:password="false"
        android:singleLine="false"
        android:textIsSelectable="false"
        android:textColorLink="#ffffa704"
        android:shadowColor="#ff000000"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="4.0"/>

    <ImageView
        android:layout_width="245dp"
        android:layout_height="163dp"
        android:id="@+id/imageView"
        android:layout_x="41dp"
        android:layout_y="34dp"
        android:background="@mipmap/gpstiming"
        android:adjustViewBounds="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_marginTop="56dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/name"
        android:id="@+id/textView"
        android:layout_x="0dp"
        android:layout_y="208dp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="30dp"
        android:shadowColor="#ff000000"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="6.0"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/password"
        android:id="@+id/textView4"
        android:layout_x="0dp"
        android:layout_y="258dp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/runnerName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:shadowColor="#ff000000"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="6.0"
        android:password="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/invalid"
        android:id="@+id/invalid"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/loginButton"
        android:layout_marginTop="15dp"
        android:textColor="#ffe60000"
        android:visibility="invisible"
        android:textStyle="bold"
        android:shadowColor="#ff000000"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="10.0"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/power"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@mipmap/turnoff"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:clickable="true" />

</RelativeLayout>